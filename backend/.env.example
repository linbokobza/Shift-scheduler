# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Atlas Connection
# Generate a strong password and replace <username>:<password> with actual credentials
# Keep this secure and never commit actual credentials
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/shift-scheduler?retryWrites=true&w=majority

# JWT Secret - Generate a strong random string using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Never use the default value in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_RESET_EXPIRES_IN=15m

# CORS - List allowed origins for security
CORS_ORIGIN=http://localhost:5173

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173

# Email Configuration (Gmail SMTP - for password reset)
# To use Gmail:
# 1. Enable 2-Step Verification in your Google Account
# 2. Generate an App Password: Google Account → Security → App passwords
# 3. Use the 16-character app password below
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-char-app-password
EMAIL_FROM=your-email@gmail.com

# Logging
LOG_LEVEL=info

# Security
NODE_ENV=production  # Set to 'production' in production environment
